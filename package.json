{
  "name": "cc-plan-review",
  "version": "0.0.1-alpha.2",
  "description": "Claude Code plugin for human review of plans with ExitPlanMode interception and Web UI",
  "main": "dist/index.cjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhcsyncer/cc-plan-review.git"
  },
  "homepage": "https://github.com/zhcsyncer/cc-plan-review#readme",
  "bugs": {
    "url": "https://github.com/zhcsyncer/cc-plan-review/issues"
  },
  "bin": {
    "cc-plan-review": "dist/index.cjs"
  },
  "files": [
    "dist",
    ".claude-plugin",
    ".mcp.json",
    "hooks"
  ],
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsx watch src/index.ts",
    "build": "pnpm run build:server && pnpm run build:http-only && pnpm run build:scripts && pnpm run build:client",
    "build:server": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/index.cjs",
    "build:http-only": "esbuild src/http-only.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/http-only.cjs",
    "build:scripts": "esbuild scripts/intercept-plan.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/scripts/intercept-plan.cjs",
    "build:client": "cd client && pnpm install && pnpm run build",
    "prepublishOnly": "pnpm run build",
    "start": "node dist/index.cjs"
  },
  "keywords": [
    "claude-code",
    "claude-code-plugin",
    "mcp",
    "mcp-server",
    "hooks",
    "plan-review",
    "human-review",
    "ai-assistant"
  ],
  "author": "syncer <zhcsyncer@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.22.0",
    "express": "5.1.0",
    "open": "11.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "5.0.5",
    "@types/node": "24.10.1",
    "esbuild": "0.27.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
