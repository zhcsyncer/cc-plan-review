{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p ~/.claude/cc-plan-review/logs && CC_PLAN_REVIEW_DEBUG=1 node ${CLAUDE_PLUGIN_ROOT}/dist/scripts/intercept-plan.cjs 2>>~/.claude/cc-plan-review/logs/hook.log",
            "timeout": 600
          }
        ]
      }
    ]
  }
}
